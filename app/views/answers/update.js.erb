<% if @answer.errors.present? %>
  $('.answer-errors-<%= @answer.id %>').html('');
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors-<%= @answer.id %>').append('<%= j message %><br>');
  <% end %>
<% else %>
  $('.answer-<%= @answer.id %>').html('<%= j render 'questions/answer', question: @question, answer: @answer %>');
<% end %>